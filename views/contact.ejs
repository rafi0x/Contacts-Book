<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to a dynamic contact list</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <style>
      .inputs {
        display: flex;
        flex-direction: column;
      }
      .inputs > input {
        width: 100%;
        margin-bottom: 5px;
      }
      .inputs > a {
        margin: 0 0 0 auto;
        padding: 0 30px;
      }
    </style>
  </head>
  <body>
    <section class="container">
      <h1 class="p-5">Dynamic Contact List</h1>
      <div class="col-lg-12 d-flex">
        <button
          class="btn btn-primary mr-3"
          data-toggle="modal"
          data-target="#exampleModal"
        >
          Add Contact
        </button>
        <div class="col-lg-8">
          <form action="" method="post">
            <input
              type="text"
              class="form-control"
              name="search"
              placeholder="search"
            />
          </form>
        </div>
      </div>
      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% let serial = 1 %> <% for(let i of data) { %>
          <tr>
            <td><%= serial++ %></td>
            <td><%= i.name %></td>
            <td>
              <table>
                <% if (i.email.length > 1) { %> <% for( let email of i.email) {
                %>

                <tr>
                  <td><a href="mailto:<%= email %>"><%= email %></a></td>
                </tr>

                <% } %><% } else { %>
                <td><a href="mailto:<%= i.email %>"><%= i.email %></a></td>
                <% } %>
              </table>
            </td>
            <td>
              <table>
                <% if (i.phone.length > 1) { %> <% for( let phone of i.phone) {
                %>

                <tr>
                  <td><a href="tel:<%= phone %>"><%= phone %></a></td>
                </tr>

                <% } %><% } else { %>
                <td><a href="tel:<%= i.phone %>"><%= i.phone %></a></td>
                <% } %>
              </table>
            </td>
            <td>
              <button
                type="submit"
                class="btn btn-warning edit-btn"
                data-toggle="modal"
                data-target="#editModal"
                data-name="<%= i.name %>"
                data-email="<%= i.email %>"
                data-phone="<%= i.phone %>"
                data-id="<%= i._id %>"
              >
                edit
              </button>
            </td>
            <td>
              <a href="/contact/delete/<%= i._id %>" class="btn btn-danger"
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </section>

    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">New contact</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="post" action="/contact" id="new-contact">
              <div class="row form-group">
                <label
                  for="editFirstNameModalLabel"
                  class="col-sm-3 col-form-label input-label"
                  >Full name</label
                >

                <div class="col-sm-9">
                  <div class="inputs">
                    <!-- error field -->
                    <div id="name-error" class="invalid-feedback d-block"></div>
                    <!-- input -->
                    <input
                      type="text"
                      class="form-control contactInput"
                      name="name"
                      placeholder="Name"
                    />
                  </div>
                </div>
              </div>

              <div class="row form-group">
                <label
                  for="editEmailModalLabel"
                  class="col-sm-3 col-form-label input-label"
                  >Email</label
                >
                <div class="col-sm-9">
                  <div class="inputs" id="emailInput">
                    <!-- error field -->
                    <div
                      id="email-error"
                      class="invalid-feedback d-block"
                    ></div>
                    <!-- input -->
                    <input
                      type="text"
                      class="form-control contactInput"
                      name="email"
                      placeholder="email"
                    />
                    <a class="btn btn-primary" id="more-email"> + </a>
                  </div>
                </div>
              </div>

              <div class="row form-group">
                <label
                  for="editEmailModalLabel"
                  class="col-sm-3 col-form-label input-label"
                  >Phone</label
                >
                <div class="col-sm-9">
                  <div class="inputs" id="phoneInput">
                    <!-- error field -->
                    <div
                      id="phone-error"
                      class="invalid-feedback d-block"
                    ></div>
                    <!-- input -->
                    <input
                      type="text"
                      class="form-control contactInput"
                      name="phone"
                      placeholder="phone"
                    />
                    <a class="btn btn-primary" id="more-phone"> + </a>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="submit" form="new-contact" class="btn btn-primary">
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit contact</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="post" action="/contact/edit" id="edit-contact">
              <div class="row form-group">
                <label
                  for="editFirstNameModalLabel"
                  class="col-sm-3 col-form-label input-label"
                  >Full name</label
                >

                <div class="col-sm-9">
                  <div class="inputs">
                    <!-- error field -->
                    <div id="name-error" class="invalid-feedback d-block"></div>
                    <!-- input -->
                    <input
                      type="text"
                      class="form-control editInput"
                      name="editName"
                      placeholder="Name"
                    />
                  </div>
                </div>
              </div>

              <div class="row form-group">
                <label
                  for="editEmailModalLabel"
                  class="col-sm-3 col-form-label input-label"
                  >Email</label
                >
                <div class="col-sm-9">
                  <div class="inputs" id="emailInput">
                    <!-- error field -->
                    <div
                      id="editEmail-error"
                      class="invalid-feedback d-block"
                    ></div>
                    <!-- input -->
                    <textarea
                      rows="4"
                      cols="50"
                      type="text"
                      class="form-control editInput"
                      name="editEmail"
                      placeholder="email"
                    ></textarea>
                  </div>
                </div>
              </div>

              <div class="row form-group">
                <label
                  for="editEmailModalLabel"
                  class="col-sm-3 col-form-label input-label"
                  >Phone</label
                >
                <div class="col-sm-9">
                  <div class="inputs" id="phoneInput">
                    <!-- error field -->
                    <div
                      id="editPhone-error"
                      class="invalid-feedback d-block"
                    ></div>
                    <!-- input -->
                    <textarea
                      rows="4"
                      cols="50"
                      type="text"
                      class="form-control editInput"
                      name="editPhone"
                      placeholder="phone"
                    ></textarea>
                  </div>
                </div>
              </div>
              <input type="hidden" name="id" />
            </form>
          </div>
          <div class="modal-footer">
            <button type="submit" form="edit-contact" class="btn btn-primary">
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <script>
      let emailAddBtn = document.querySelector("#more-email");
      let phoneAddBtn = document.querySelector("#more-phone");
      let editBtn = document.querySelectorAll(".edit-btn");

      let newContactForm = document.querySelector("#new-contact");
      let editContactForm = document.querySelector("#edit-contact");

      inter("email", emailAddBtn);
      inter("phone", phoneAddBtn);

      newContactForm.onsubmit = async function (e) {
        try {
          e.preventDefault();

          document
            .querySelectorAll(".invalid-feedback")
            .forEach((e) => (e.innerHTML = ""));

          let formData = new URLSearchParams(new FormData(this));

          let response = await fetch(this.action, {
            method: this.method,
            body: formData,
          });

          let result = await response.json();

          if (result.error) {
            Object.keys(result.error).forEach((fieldName) => {
              // getting error message field for show message
              const errFields = document.querySelector(`#${fieldName}-error`);
              errFields.innerHTML = result.error[fieldName].msg;
            });
          } else {
            console.log("success");
            setTimeout(() => {
              location.reload();
            }, 1000);
          }
        } catch (error) {
          console.log(error);
        }
      };

      function inter(name, btn) {
        let i = 0;
        btn.onclick = () => {
          i++;
          if (i >= 2) {
            btn.classList.add("d-none");
          }
          btn.insertAdjacentHTML(
            "beforebegin",
            `<input type="text" class="form-control mb-2" name="${name}" placeholder="${name}"/>`
          );
        };
      }

      editBtn.forEach((btn) => {
        btn.onclick = () => {
          document
            .querySelectorAll(".invalid-feedback")
            .forEach((e) => (e.innerHTML = ""));
          editContactForm[0].value = btn.dataset.name;
          editContactForm[1].value = btn.dataset.email;
          editContactForm[2].value = btn.dataset.phone;
          editContactForm[3].value = btn.dataset.id;
        };
      });

      editContactForm.onsubmit = async (e) => {
        try {
          e.preventDefault();

          document
            .querySelectorAll(".invalid-feedback")
            .forEach((e) => (e.innerHTML = ""));

          let formData = new URLSearchParams(new FormData(editContactForm));
          let response = await fetch("/contact/edit", {
            method: "POST",
            body: formData,
          });

          let result = await response.json();
          console.log(result.error);
          if (result.error) {
            Object.keys(result.error).forEach((fieldName) => {
              // getting error message field for show message
              const errFields = document.querySelector(`#${fieldName}-error`);
              errFields.innerHTML = result.error[fieldName].msg;
            });
          } else {
            console.log("success");
            setTimeout(() => {
              location.reload();
            }, 1000);
          }
        } catch (error) {
          console.error(error);
        }
      };
    </script>
  </body>
</html>
